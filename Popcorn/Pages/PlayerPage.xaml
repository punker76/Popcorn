<Page
    x:Class="Popcorn.Pages.PlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Popcorn.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:player="clr-namespace:Popcorn.UserControls.Player"
    Title="PlayerPage"
    d:DesignHeight="300"
    d:DesignWidth="300"
    DataContext="{Binding Source={StaticResource Locator}, Path=Window.MediaPlayer}"
    KeepAlive="False"
    mc:Ignorable="d">

    <Grid>
        <player:PlayerUserControl DataContext="{Binding}" />
    </Grid>
</Page>
